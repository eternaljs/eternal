{
  "name": "eternal-js",
  "private": true,
  "workspaces": [
    "packages/core",
    "packages/adapters/*",
    "cli/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "dependencies": {
    "@eternal-js/core": "workspace:*"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "turbo": "^2.3.3"
  },
  "packageManager": "pnpm@8.15.6"
}